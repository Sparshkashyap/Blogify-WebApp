<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add blog</title>
    <%- include('./partials/head.ejs') %>
</head>
<body style="background: linear-gradient(to left, #e6e6fa, #fffafa, #ffe4e1, #e0f7fa);" >
    <%- include('./partials/nav.ejs') %>

    <div class="container mt-4">

        <% if (locals.error) { %>

          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
         
        <% } %>

        <form action="/user/addblog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="formFile" class="form-label" style="font-weight: 500;">Upload the cover image</label>
            <input class="form-control" type="file" id="formFile" name="img">
          </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label"  style="font-weight:500;">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" name="title">
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label" style="font-weight: 500;">body</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="body"></textarea>
          </div>
          <div>
            <button type="submit" class="btn btn-outline-success">Submit</button>
          </div>
        </form>
        
      <!-- <div class="d-grid gap-2 d-md-flex justify-content-md-end">
       <a href="/user/addblog/update"> <button class="btn btn-outline-warning " type="button">Update</button></a>
       <a href="/user/addblog/delete"> <button class="btn btn-outline-danger" type="button">Delete</button> </a>
      </div> -->
    </div>
     <%- include('./partials/script.ejs') %>
</body>
</html>